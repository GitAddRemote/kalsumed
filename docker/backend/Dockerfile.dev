FROM node:20-alpine
WORKDIR /usr/src/apps/backend

# Enable pnpm with corepack
RUN corepack enable && corepack prepare pnpm@latest --activate

# Copy only manifest files and workspace configs for faster build
COPY package.json pnpm-lock.yaml turbo.json pnpm-workspace.yaml ./
COPY apps/backend/package.json apps/backend/

# Install dependencies
RUN pnpm install --frozen-lockfile

# Copy app source files
COPY apps/backend/tsconfig.json apps/backend/
COPY apps/backend/src apps/backend/src/

# Build project
RUN pnpm --filter @kalsumed/backend run build

# Entrypoint: install dependencies and run dev server
CMD ["pnpm", "--filter", "@kalsumed/backend", "dev"]
